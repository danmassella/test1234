<body>
  <div class="container">
    <h1>Customer Satisfaction Survey</h1>
    <form id="surveyForm">
      <label for="recommendationScore">
        How likely are you to recommend us? (1 = Not likely, 10 = Very likely)
      </label>
      <input
        type="number"
        id="recommendationScore"
        name="recommendationScore"
        min="1"
        max="10"
        required
      />

      <label for="improvementText">How can we improve?</label>
      <textarea
        id="improvementText"
        name="improvementText"
        placeholder="Your feedback here..."
        required
      ></textarea>

      <button type="submit">Submit Feedback</button>
    </form>

    <div id="confirmationMessage">Thank you for your feedback!</div>
    <div id="errorMessage">There was a problem submitting your feedback. Please try again.</div>
  </div>

<script>
  const form = document.getElementById('surveyForm');
  const confirmationMessage = document.getElementById('confirmationMessage');
  const errorMessage = document.getElementById('errorMessage');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Collect values
    const score = form.recommendationScore.value;
    const improvement = form.improvementText.value.trim();

    if (!score || score < 1 || score > 10 || !improvement) {
      errorMessage.textContent = 'Please complete all fields correctly.';
      errorMessage.style.display = 'block';
      confirmationMessage.style.display = 'none';
      return;
    }

    // Here you would send the data to your backend or form service
    // For demo, we simulate success with a timeout

    try {
      // Simulate async submission (replace with real submission code)
      await new Promise((res) => setTimeout(res, 500));

      form.reset();
      errorMessage.style.display = 'none';
      confirmationMessage.style.display = 'block';
    } catch (err) {
      errorMessage.textContent = 'There was a problem submitting your feedback. Please try again.';
      errorMessage.style.display = 'block';
      confirmationMessage.style.display = 'none';
    }
  });
</script>
</body>
